<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      xmlns:chartingToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit" x:Class="WpfApplication1.BarHaltes"
      mc:Ignorable="d"
      Title="Haltes" Height="1920" Width="1080">

    <Grid>
        <chartingToolkit:Chart  Name="Totalehaltes" Title="%Aantal Haltes - OV gebruik" Height="580" Margin="10,125,-10,1217" Background="White">
            <chartingToolkit:BarSeries  x:Name="Haltes" DependentValuePath="Value"
            IndependentValuePath="Key" ItemsSource="{Binding}"
            IsSelectionEnabled="True" Margin="0,0,1.4,0" Title="Aantal_Haltes"/>

            <chartingToolkit:BarSeries  x:Name="OV" DependentValuePath="Value"
            IndependentValuePath="Key" ItemsSource="{Binding}"
            IsSelectionEnabled="True" Margin="0,0,1.4,0" Title="OV_gebruik"/>
        </chartingToolkit:Chart>

        <Frame x:Name="Main"/>
    </Grid>
</Page>
